{
  "name": "sistema-frequencia-pet",
  "version": "1.0.0",
  "description": "Sistema de frequência e gestão de gastos para PET Saúde Digital",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build:frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:prod": "npm run build:frontend && node ./tools/clean-build.js",
    "lint": "npm run lint --workspace=frontend --if-present",
    "type-check": "npm run type-check --workspace=frontend --if-present"
  },
  "keywords": [
    "frequencia",
    "pet",
    "saude-digital",
    "gestao",
    "supabase"
  ],
  "author": "PET Saúde Digital",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "react-chartjs-2": "^5.3.1"
  }
}
